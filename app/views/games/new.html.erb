
<div class=container>
<h1>New Game</h1>


<% @letters.each do |i| %>
<span class="letter"><%=i%></span>
<% end %>

<h4><%= "Can you find a word?" %></h4>

<form action="/score" method="get">
   <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Type a word">
  <%= hidden_field_tag :random_letters, @letters %>
  <input type="submit">
</form>
</div>
